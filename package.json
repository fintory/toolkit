{
  "name": "toolkit",
  "private": true,
  "scripts": {
    "build": "./internals/scripts/build.sh",
    "test": "cross-env BABEL_ENV=commonjs NODE_ENV=test jest --no-cache",
    "lint": "eslint ./packages",
    "publish": "git pull --rebase && check-installed-dependencies && npm run build && lerna publish --skip-temp-tag --conventional-commits --message 'chore: Publish [skip-ci]' && git push"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.3.0",
    "@babel/plugin-transform-modules-commonjs": "7.2.0",
    "@babel/plugin-transform-object-assign": "7.2.0",
    "@babel/plugin-transform-runtime": "7.2.0",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "@babel/runtime": "7.3.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.0.0",
    "babel-plugin-polished": "1.1.0",
    "babel-plugin-styled-components": "1.9.1",
    "check-installed-dependencies": "1.0.1",
    "cross-env": "5.2.0",
    "enzyme": "3.7.0",
    "enzyme-adapter-react-16": "1.7.0",
    "eslint": "5.9.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-prettier": "4.3.0",
    "eslint-plugin-flowtype": "3.2.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-prettier": "3.0.0",
    "eslint-plugin-react": "7.11.1",
    "flow-bin": "0.87.0",
    "jest": "24.0.0",
    "lerna": "3.5.0",
    "prettier": "1.16.4",
    "prettier-eslint": "8.8.2",
    "react": "16.6.3",
    "react-dom": "16.6.3",
    "rimraf": "2.6.2",
    "styled-components": "4.1.1"
  },
  "dependencies": {},
  "jest": {
    "verbose": true,
    "cacheDirectory": ".jest",
    "setupFilesAfterEnv": [
      "<rootDir>internals/tests/setup.js"
    ],
    "testMatch": [
      "**/test/**/*.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}
